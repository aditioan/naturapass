<!DOCTYPE html>
<head>
    <title>Email - {{ application }}</title>
    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial;
            font-size: 13px;
        }

        a {
            color: #8dbb1c;
            text-decoration: none;
        }

        p {
            margin-bottom: 9px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            empty-cells: show;
            table-layout: auto;
        }

        img {
            display: block;
        }

        table.corps {
            width: 100%;
            height: 100%;
            background-color: #e5e5e5;
        }

        table.mention {
            border-top: 1px solid #c0c0c0;
            font-size: 11px;
        }

        td.corps-center {
            width: 33.3%;
            vertical-align: top;
        }

        table.container {
            background-color: #fff;
            width: 600px;
            box-shadow: 0 0 10px 0 #AAAAAA;
        }

        .margin-height-40 {
            height: 40px;
            text-align: center;
            font-size: 11px;
        }
    </style>
</head>
<html>
    <body>
        <table class="corps">
            <tr>
                <td colspan="3" class="margin-height-40">
                    Pour visualiser cet email en ligne, <a href="{% block visu_site %}{% endblock %}">cliquez ici</a>
                </td>
            </tr>
            <tr>
                <td class="corps-center"></td>
                <td class="corps-center">
                    <table class="container">
                        <tr>
                            <td><img src="{{ app.request.scheme ~  '://' ~  app.request.host ~asset('uploads/global/email-application-logo.jpg') }}" alt="logo" width="600" height="98"></td>
                        </tr>
                        {% if visibility.img_email %}
                            <tr>
                                <td><img src="{{ app.request.scheme ~  '://' ~  app.request.host ~asset('uploads/global/email-application-photo.jpg') }}" alt="photo" width="600" height="152"></td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td>
                                <table cellpadding="35">
                                    <tr>
                                        <td>
                                            {% block body %}
                                            {% endblock %}
                                            <p>{{ 'email.comeback'|trans({},translation_name~'email') }} <b><a href="{{ url('naturapass_main_homepage') }}">{{ 'email.application'|trans({},translation_name~'email') }}</a></b>,</p>
                                            <p>{{ 'email.salutation'|trans({},translation_name~'email') }},</p>
                                            <p><em><b>{{ 'email.team'|trans({},translation_name~'email') }}</b></em></p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table class="mention" cellpadding="20">
                                    <tr>
                                        <td>
                                            {{ 'email.mention'|trans({'%url%': app.request.scheme ~  '://' ~  app.request.host}, translation_name~'email')|raw }}
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
                <td class="corps-center"></td>
            </tr>
            <tr>
                <td colspan="3" class="margin-height-40">&nbsp;</td>
            </tr>
        </table>
    </body>
</html>
