{% extends '::base-ng-template.html.twig' %}

{% block template_id %}modal.add-category.html{% endblock %}

{% block template_body %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()">&times;</button>
        <h4 class="modal-title">Ajouter une catégorie</h4>
    </div>
    <div class="modal-body">
        <form name="tree" class="form-naturapass_tree_add ng-pristine ng-valid" role="form" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="text" id="title" name="title" placeholder="Nom de la catégorie" class="form-control" ng-model="data.entity.title">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()" np-submit-loader="data.loading">{{ 'button.validate'|trans({}, translation_name~'global') }}</button>
        <button class="btn btn-danger" ng-click="cancel()" np-submit-loader="data.loading">{{ 'button.cancel'|trans({}, translation_name~'global') }}</button>
    </div>
{% endblock %}