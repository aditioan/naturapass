{% extends '::base-ng-template.html.twig' %}

{% block template_id %}modal.groups-edit.html{% endblock %}

{% block template_body %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()">&times;</button>
        <h4 class="modal-title">{{ 'receiver.tree.edit_group'|trans({},translation_name~'receiver') }}</h4>
    </div>
    <div class="modal-body">
        {% verbatim %}
            <input id="modal-groups-select2" ui-select2="groupsOptions" class="modal-groups-select2" ng-model="groupsSelect" class="form-control" style="width:200px;" value="{{ data.json.groups }}">
        {% endverbatim %}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()" np-submit-loader="data.loading">{{ 'button.validate'|trans({}, translation_name~'global') }}</button>
        <button class="btn btn-danger" ng-click="cancel()" np-submit-loader="data.loading">{{ 'button.cancel'|trans({}, translation_name~'global') }}</button>
    </div>
{% endblock %}