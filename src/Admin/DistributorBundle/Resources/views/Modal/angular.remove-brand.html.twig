{% extends '::base-ng-template.html.twig' %}

{% block template_id %}modal.remove-brand.html{% endblock %}

{% block template_body %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()">&times;</button>
        <h4 class="modal-title">{{ 'brand.title.close_brand'|trans({}, translation_name~'brand') }}</h4>
    </div>
    <div class="modal-body">
        {% verbatim %}
        <p np-bind-html="'brand.description.closebrand'|trans: {brand: data.entity.name}: 'brand'">
        </p>
        {% endverbatim %}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-hide="data.removing" ng-click="data.removing = true">{{ 'button.yes'|trans({}, translation_name~'global') }}</button>
        <button class="btn btn-primary" ng-show="data.removing" ng-click="ok()" np-submit-loader="data.loading">{{ 'label.confirm'|trans({}, translation_name~'global') }}</button>
        <button class="btn btn-danger" ng-click="cancel()" np-submit-loader="data.loading">{{ 'button.no'|trans({}, translation_name~'global') }}</button>
    </div>
{% endblock %}