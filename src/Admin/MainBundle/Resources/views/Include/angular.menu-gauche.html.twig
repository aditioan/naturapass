                                <li><a href="{{ path('admin_graph_pertinences') }}" class="icon-joomla">Pertinences</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if visibility.admin.distributor %}
