<div id="menu-gauche" class="hidden-print">
    <div class="menu-gauche-scroll" role="complementary">

        <div class="media menu-profil">
            <a class="pull-left" href="{{ path('fos_user_profile_show_name', {'usertag': app.user.usertag}) }}">
                <img class="media-object" src="{{ app.user.profilePicture|bProfilePict('thumb') }}" width="70" height="70" alt="{{ app.user.fullname }}">
            </a>
            <div class="media-body">
                <p>
                    <b>{{ app.user.firstname }}</b><br>
                    {{ app.user.lastname }}
                </p>
                <a href="{{ path('fos_user_profile_show_name', {'usertag': app.user.usertag}) }}" target="_blank" class="btn btn-primary btn-sm btn-icon icon-user">{{ 'user.profil'|trans({}, translation_name~'user') }}</a>
            </div>
        </div>
        {% if visibility.admin.news %}
            <div class="panel-group" id="accordionNews">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordionNews" href="#collapseNews" class="icon-pencil5 {% if 'admin_news'|isCurrentRouteGroup == false %}collapsed{% endif %}">
                                Page d'accueil <i class="icon-arrow-down"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseNews" class="panel-collapse collapse {% if 'admin_news'|isCurrentRouteGroup %}in{% endif %}">
                        <div class="panel-body">
                            <ul class="nav nav-stacked">
                                <li><a href="{{ path('admin_news_homepage') }}" class="icon-drawer2">Listing des actualités</a></li>
                                <li><a href="{{ path('admin_news_add') }}" class="icon-plus">Ajouter un actualité</a></li>
                                {#                                <li><a href="{{ path('admin_news_slides') }}" class="icon-drawer2">Listing des slides</a></li>#}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if visibility.admin.game %}
            <div class="panel-group" id="accordionGame">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordionGame" href="#collapseGame" class="icon-gamepad2 {% if 'admin_game'|isCurrentRouteGroup == false %}collapsed{% endif %}">
                                Jeux <i class="icon-arrow-down"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseGame" class="panel-collapse collapse {% if 'admin_game'|isCurrentRouteGroup %}in{% endif %}">
                        <div class="panel-body">
                            <ul class="nav nav-stacked">
                                <li><a href="{{ path('admin_game_homepage') }}" class="icon-drawer2">Listing des jeux</a></li>
                                <li><a href="{{ path('admin_game_add') }}" class="icon-plus">Ajouter un jeu</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if visibility.admin.graph %}
            <div class="panel-group" id="accordionGraph">
                <div class="panel panel-default">
                    <div class="panel-heading">
