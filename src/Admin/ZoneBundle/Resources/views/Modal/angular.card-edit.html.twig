{% extends '::base-ng-template.html.twig' %}

{% block template_id %}modal.card-edit.html{% endblock %}

{% block template_body %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" ng-if="param.add == 1">{{ 'receiver.tree.add_card'|trans({}, translation_name~'receiver') }}</h4>
        <h4 class="modal-title" ng-if="param.add == 0">{{ 'receiver.tree.edit_card'|trans({}, translation_name~'receiver') }}</h4>
    </div>
    <div class="modal-body">
        {% verbatim %}
            <select name="card" class="form-control" ng-model="select.card" ng-options="color.name for color in allcards">
                <option value="">-- Choisir une fiche --</option>
            </select>
        {% endverbatim %}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()" np-submit-loader="data.loading">{{ 'button.validate'|trans({}, translation_name~'global') }}</button>
        <button class="btn btn-danger" ng-click="cancel()" np-submit-loader="data.loading">{{ 'button.cancel'|trans({}, translation_name~'global') }}</button>
    </div>
{% endblock %}