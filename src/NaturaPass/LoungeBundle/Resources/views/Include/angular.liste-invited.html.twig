<div class="clearfix" ng-if="lounge.connected.access == 3">
    <button type="button" data-toggle="collapse"
            data-target="#infoUser{{ subscriber.user.id }}{% endverbatim %}{{ RANDOM }}{% verbatim %}"
            class="btn btn-default btn-xs lounge-user-options icon-cog2 pull-left"></button>
</div>
<div id="infoUser{{ subscriber.user.id }}{% endverbatim %}{{ RANDOM }}{% verbatim %}" class="collapse" ng-if="lounge.connected.access == 3">
    <a href="#" class="btn btn-primary btn-icon icon-spinner12" ng-click="openReviveInvitedMemberModal(lounge , subscriber)">{% endverbatim %}{{ 'lounge.btn.revive-invited'|trans({}, translation_name~'lounge') }}{% verbatim %}</a>
    <a href="#" class="btn btn-primary btn-icon icon-checkmark" ng-click="openValidInvitedMemberModal(lounge , subscriber)">{% endverbatim %}{{ 'lounge.btn.valid-invited'|trans({}, translation_name~'lounge') }}{% verbatim %}</a>
</div>
