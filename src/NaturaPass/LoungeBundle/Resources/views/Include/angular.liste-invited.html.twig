    <button type="button" class="close pull-right ng-scope" ng-if="lounge.connected.access == 3" ng-click="openDeleteInvitedMemberModal(lounge , subscriber)">Ã—</button>
    <p>
        <a href="{{ 'fos_user_profile_show_name'| route: {usertag: subscriber.user.usertag } }}">{{ subscriber.user.fullname }}</a><br>
