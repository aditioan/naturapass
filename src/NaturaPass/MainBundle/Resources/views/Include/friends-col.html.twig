{% if visibility.social_network %}
    <div id="right-column" data-ng-controller="RightColumnController">
        <div class="panel" ng-show="recommendations.length">
            <div class="panel-body">
                <h3 class="panel-title">{{ 'search.list.title.proposal'|trans({},translation_name~'main') }}</h3>
                <p class="text-muted">{{ 'search.list.maybe_know'|trans({},translation_name~'main') }} ?</p>
                <div class="small-loading" ng-show="recommendationLoading"></div>
                <ul class="media-list" ng-cloak>
                    <li class="media" ng-repeat="recommendation in recommendations | orderBy: '-pertinence'" ng-class="{loading: recommendation.friendship.loading}">
                        {% verbatim %}
                    <div class="pull-left">
                        <a class="pull-left" ng-href="{{ 'fos_user_profile_show_name'|route: {usertag: recommendation.usertag } }}">
                            <img ng-src="{{ recommendation.profilepicture }}" width="65" height="65">
                        </a>
                    </div>
                    <div class="media-body">
                        <button type="button" class="close pull-right" ng-click="removeRecommendation(recommendation)">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <a ng-href="{{ 'fos_user_profile_show_name'|route: {usertag: recommendation.usertag } }}">
                            {{ recommendation.fullname }}
                        </a><br>
                        <small>{{ 'search.list.friend'|transchoice: recommendation.mutualFriends: {'count': recommendation.mutualFriends}: 'main' }}</small><br>
                        <button type="button" class="btn btn-primary btn-sm btn-block" ng-click="addFriendship(recommendation)" ng-class="{disabled: recommendation.friendship.loading}">{% endverbatim %}{{ 'button.add'|trans({}, translation_name~'global') }}{% verbatim %}</button>
                    </div>
                    {% endverbatim %}
                    </li>
                </ul>
                <a href="{{ path('naturapass_main_search') }}" class="btn-link btn btn-block text-center">{{ 'nav.pop_notification.all_suggestion'|trans({},translation_name~'nav') }}</a>
            </div>
        </div>
    </div>
{% endif %}