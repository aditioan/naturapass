{% extends "NaturaPassMainBundle::layout-no-menu.html.twig" %}

{% block title %}Applications{% endblock %}
{% block description %}Applications{% endblock %}

{% block corps %}
    <div id="corps-container" class="large-container">
        <div class="container-md">
            <h1><img src="/uploads/global/icone-application-600.png" alt="Logo naturapass" width="34" height="34">Applications</h1>
            <table style="width: 100%;">
                {% for name, array in files %}
                    <tr>
                        <td style="width: 50%;">
                            {{ name }}
                        </td>
                        <td style="width: 30%;">
                            {{ array[1] }}
                        </td>
                        <td style="width: 20%;">
                            <button type="button" class="btn btn-primary btn-sm btn-block" onclick="window.location.href = '{{ app.request.getSchemeAndHttpHost() }}/uploads/applications/{{ array[0] }}'">Télécharger</button>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock corps %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts package='assetic' filter='?yui_js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $(function () {
        });
    </script>
{% endblock javascripts %}
