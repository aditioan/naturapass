{% extends '::base-ng-template.html.twig' %}

{% block template_id %}modal.like.html{% endblock %}

{% block template_body %}
    <div class="modal-header">
        <button type="button" class="close" aria-hidden="true" ng-click="ok()">&times;</button>
        <h4 class="modal-title">{{ 'publication.state.person_likes'|trans({}, translation_name~'publication') }}</h4>
    </div>
    <div class="modal-body">
        <div class="small-loading" ng-show="data.loading"></div>
        <div class="row">
            {% verbatim %}
            <div class="col-xs-4" ng-repeat="user in data.likes">
                <div class="media">
                     <div class="pull-left">
                        <a ng-href="{{ 'fos_user_profile_show_name' | route: {usertag: user.usertag} }}" title="{{ user.fullname}}" target="_blank">
                            <img ng-src="{{ user.profilepicture}}" width="40" height="40" alt="{{ user.fullname}}">
                        </a>
                     </div>
                     <div class="media-body">
                        <a ng-href="{{ 'fos_user_profile_show_name' | route: {usertag: user.usertag} }}" target="_blank">{{ user.fullname}}</a>
                     </div>
                </div>
            </div>
            {% endverbatim %}
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-danger" ng-click="ok()">{{ 'button.close'|trans({}, translation_name~'global') }}</button>
    </div>
{% endblock %}