{% extends '::base-ng-template.html.twig' %}

{% block template_id %}modal.userlock.html{% endblock %}

{% block template_body %}
    <div class="modal-header">
        <button type="button" class="close" aria-hidden="true" ng-click="ok()">&times;</button>
        <h4 class="modal-title">{{ 'publication.action.lockuser'|trans({}, translation_name~'publication') }}</h4>
    </div>
    <div class="modal-body">
        {% verbatim %}
        <p np-bind-html="'publication.modal.body.userlock'|trans: {user_name: user.fullname}: 'publication'">
        </p>
        {% endverbatim %}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="validLock()">{{ 'button.yes'|trans({}, translation_name~'global') }}</button>
        <button class="btn btn-danger" ng-click="ok()">{{ 'button.no'|trans({}, translation_name~'global') }}</button>
    </div>
{% endblock %}