{% extends "::base.html.twig" %}

{% block title %}{{ 'title.password_lost'|trans({},translation_name~'user') }} | {{ parent() }}{% endblock %}

{% block stylesheets %}
    {% include "NaturaPassMainBundle:Include:background.html.twig" %}
{% endblock %}
{% block body %}

    <div id="corps-container" class="large-container">
        <div class="container container-md">
            <h1>{{ 'user.password_lost.title'|trans({},translation_name~'user') }}</h1>

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div>
                {# {% block fos_user_content %}#}
                {% include "FOSUserBundle:Resetting:request_content.html.twig" %}
                {# {% endblock fos_user_content %}#}
            </div>
        </div>
    </div>

{% endblock body %}